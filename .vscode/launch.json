        {
            "type": "node",
            "request": "launch",
            "name": "Launch - Teams Debug",
            "program": "${workspaceRoot}/src/app.ts",
            "cwd": "${workspaceRoot}/build/src",
            "preLaunchTask": "build",
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/build/**/*.js" ],
            "env": {
                "BASE_URI": "https://build2018.ngrok.io",
                "MICROSOFT_APP_ID": "bdc707d5-48e0-48f8-bbe7-6131e0565a4c",
                "MICROSOFT_APP_PASSWORD": "tsbapsTSDM227}qOYF44#;%",
                "NODE_DEBUG": "botbuilder"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch - Fiddler (only works when running Fiddler)",
            "program": "${workspaceRoot}/src/app.ts",
            "cwd": "${workspaceRoot}/build/src",
            "preLaunchTask": "build",
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/build/**/*.js" ],
            "env": {
                "BASE_URI": "https://BASE_URI",
                "MICROSOFT_APP_ID": "MICROSOFT_APP_ID",
                "MICROSOFT_APP_PASSWORD": "MICROSOFT_APP_PASSWORD",
                "NODE_TLS_REJECT_UNAUTHORIZED": "0"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch (no build)",
            "program": "${workspaceRoot}\\build\\src\\app.js",
            "cwd": "${workspaceRoot}\\build\\src",
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/build/src/**/*.js" ],
            "env": {
                "BASE_URI": "https://BASE_URI",
                "MICROSOFT_APP_ID": "MICROSOFT_APP_ID",
                "MICROSOFT_APP_PASSWORD": "MICROSOFT_APP_PASSWORD",
                "NODE_DEBUG": "botbuilder",
            }
        }
    ]
}
