{
    "$schema": "https://statics.teams.microsoft.com/sdk/v1.0/manifest/MicrosoftTeams.schema.json",
    "manifestVersion": "1.0",
    "version": "1.0.0",
    "id": "f1d45e19-196c-4c7f-9c95-24b3d9c2a1f0",
    "packageName": "com.contoso.helloworld",
    "developer": {
        "name": "Contoso",
        "websiteUrl": "https://www.microsoft.com",
        "privacyUrl": "https://www.microsoft.com/privacy",
        "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
    },
    "name": {
        "short": "Hello World",
        "full": "Hello World App for Microsoft Teams"
    },
    "description": {
        "short": "Hello World App for Microsoft Teams",
        "full": "This sample app provides a very simple app for Microsoft Teams. You can extend this to add more content and capabilities."
    },
    "icons": {
        "outline": "contoso20x20.png",
        "color": "contoso96x96.png"
    },
    "accentColor": "#60A18E",
    "staticTabs": [{
            "entityId": "com.contoso.helloworld.hellotab",
            "name": "Hello Tab",
            "contentUrl": "https://mywebapp.azurewebsites.net/hello",
            "scopes": [
                "personal"
            ]
        }
    ],
    "configurableTabs": [{
        "configurationUrl": "https://mywebapp.azurewebsites.net/configure",
        "canUpdateConfiguration": true,
        "scopes": [
            "team"
        ]
    }],
    "bots": [
        {
          "botId": "a2e4e1b7-2811-4d93-8b5c-8633208f34e5",
          "needsChannelSelector": false,
          "isNotificationOnly": false,
          "scopes": [ "team", "personal" ]
        }
      ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "mywebapp.azurewebsites.net",
        "*.mywebapp.azurewebsites.net"
    ]
}